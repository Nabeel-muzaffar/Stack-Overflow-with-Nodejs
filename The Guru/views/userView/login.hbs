<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Simple Login Form Example</title>
    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Rubik:400,700'>
    <link rel="stylesheet" href="/css/login.css">
    <link rel="stylesheet" href="/css/main.css">

</head>

<body>

    <nav>
        {{!-- <div class="logo">THE GURU</div> --}}
        <div class="navigation">
            <a href="/">Home</a>
            {{#if isAuthen}}
            <a href="/discuss">Discuss</a>
            {{/if}}
            <a href="/questions">Questions</a>
            <a href="">About</a>
        </div>
        <div class="btn-1">
            <a href="/login"><button>Login</button></a>
            <a href="/signup"><button>Signup</button></a>
            {{#if isAuthen}}
            <form action="/logout" method="post"></form>
            <input type="submit" value="Logout">
            {{/if}}
        </div>
    </nav>

    <div class="login-form">
        <form action="/login" method="post">
            <h1>Login</h1>
            <div class="content">
                <div class="input-field">
                    <input type="email" placeholder="Email" autocomplete="nope" name="email">
                </div>
                <div class="input-field">
                    <input type="password" placeholder="Password" autocomplete="new-password" name="password">
                </div>
                <a href="#" class="link">Forgot Your Password?</a>
            </div>
            <div class="action">
                <button>Login</a></button>
                <button ><a href="/signup" style="text-decoration: none; color:white">Signup</a></button>
            </div>
        </form>
    </div>
    <!-- partial -->
    <script src="/scrtpt/script.js"></script>

</body>

</html>